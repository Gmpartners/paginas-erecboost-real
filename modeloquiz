<script>
const questions = [
    {
        question: "Qual é sua faixa etária?",
        subtitle: "Essa informação nos ajuda a personalizar as recomendações para você",
        options: ["25-35 anos", "36-45 anos", "46-55 anos", "Acima de 55 anos"]
    },
    {
        question: "Com que frequência você sente falta de disposição na intimidade?",
        subtitle: "Sua resposta é confidencial e nos ajuda a entender melhor sua situação",
        options: ["Raramente", "Às vezes", "Frequentemente", "Quase sempre"]
    },
    {
        question: "Você tem percebido uma diminuição no seu desejo ao longo do tempo?",
        subtitle: "Muitas pessoas passam por isso e existem soluções naturais",
        options: ["Sim, gradualmente", "Sim, repentinamente", "Não tenho certeza", "Não percebo mudança"]
    },
    {
        question: "Como você classificaria seu nível de estresse diário?",
        subtitle: "O estresse pode impactar significativamente sua energia e disposição",
        options: ["Baixo", "Moderado", "Alto", "Muito alto"]
    },
    {
        question: "Você já experimentou algum suplemento natural para melhorar sua disposição?",
        subtitle: "Sua experiência prévia nos ajuda a entender melhor seu perfil",
        options: ["Nunca experimentei", "Já tentei sem sucesso", "Uso atualmente", "Tenho interesse"]
    },
    {
        question: "Como você se sente em relação à sua energia no dia a dia?",
        subtitle: "Sua vitalidade diária está diretamente ligada à sua disposição",
        options: ["Sempre disposto", "Moderadamente cansado", "Frequentemente cansado", "Constantemente exausto"]
    },
    {
        question: "Qual aspecto mais te preocupa atualmente?",
        subtitle: "Identificar sua principal preocupação nos ajuda a direcioná-lo melhor",
        options: ["Falta de desejo", "Baixa energia", "Insegurança", "Relacionamento"]
    },
    {
        question: "Você estaria disposto a incluir um suplemento natural na sua rotina diária?",
        subtitle: "Soluções naturais podem trazer resultados surpreendentes",
        options: ["Sim, definitivamente", "Talvez", "Preciso de mais informações", "Não tenho certeza"]
    }
];

let currentQuestion = 0;
const progressBar = document.getElementById('progress');
const questionElement = document.getElementById('question');
const subtitleElement = document.getElementById('subtitle');
const optionsElement = document.getElementById('options');
const nextButton = document.getElementById('nextBtn');
const questionContainer = document.getElementById('questionContainer');
const resultContainer = document.getElementById('result');

function loadQuestion() {
    const question = questions[currentQuestion];
    progressBar.style.width = `${(currentQuestion + 1) * (100 / questions.length)}%`;
    questionElement.textContent = question.question;
    subtitleElement.textContent = question.subtitle;
    
    optionsElement.innerHTML = '';
    question.options.forEach((option) => {
        const button = document.createElement('button');
        button.className = 'option';
        button.textContent = option;
        button.addEventListener('click', () => selectOption(button));
        optionsElement.appendChild(button);
    });
    
    nextButton.disabled = true;
}

function selectOption(selectedButton) {
    document.querySelectorAll('.option').forEach(button => {
        button.classList.remove('selected');
    });
    selectedButton.classList.add('selected');
    nextButton.disabled = false;
}

nextButton.addEventListener('click', () => {
    currentQuestion++;
    if (currentQuestion < questions.length) {
        loadQuestion();
    } else {
        showResult();
    }
});

function showResult() {
    questionContainer.style.display = 'none';
    resultContainer.style.display = 'block';
}

loadQuestion();
</script>
</body>
